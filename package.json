{
  "name": "saga-query",
  "version": "0.0.0",
  "description": "Data fetching and caching using a middleware system",
  "repository": "https://github.com/redux-saga/saga-query.git",
  "author": "Eric Bower <me@erock.io>",
  "license": "MIT",
  "private": false,
  "type": "module",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "main": "./dist/saga-query.cjs",
  "umd:main": "dist/saga-query.umd.js",
  "module": "dist/saga-query.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/saga-query.cjs",
      "default": "./dist/saga-query.modern.mjs"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "require": "./dist/react.cjs",
      "default": "./dist/react.modern.mjs"
    }
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "test": "tsc --noEmit && ava",
    "prepare": "husky install",
    "format": "prettier --write src/*.ts",
    "build": "yarn microbundle src/index.ts src/react.ts"
  },
  "devDependencies": {
    "@esbuild-kit/esm-loader": "^2.5.0",
    "@testing-library/react": "^13.2.0",
    "@types/node": "^18.11.9",
    "ava": "^5.1.0",
    "cross-fetch": "^3.1.5",
    "global-jsdom": "^8.4.0",
    "husky": "^7.0.4",
    "jsdom": "^19.0.0",
    "lint-staged": "^12.3.7",
    "microbundle": "^0.15.1",
    "nock": "^13.2.9",
    "prettier": "^2.6.2",
    "react": "18",
    "react-dom": "18",
    "react-redux": "^8.0.1",
    "redux-saga": "^1.1.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8",
    "react-redux": ">=7.2.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-redux": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "redux": "^4.1.2",
    "redux-batched-actions": "^0.5.0",
    "redux-saga": "^1.1.3",
    "robodux": "^15.0.0"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=@esbuild-kit/esm-loader",
      "--experimental-specifier-resolution=node",
      "--no-experimental-fetch",
      "--no-warnings"
    ],
    "require": [
      "ts-node/register/transpile-only",
      "cross-fetch/polyfill"
    ]
  },
  "lint-staged": {
    "*.ts": "prettier --write"
  }
}
